# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=opinian
DB_USER=postgres
DB_PASSWORD=your_password_here

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=True
SECRET_KEY=your_secret_key_here

# JWT Configuration
JWT_SECRET_KEY=your_jwt_secret_key_here
JWT_ACCESS_TOKEN_EXPIRES=3600

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=10485760
ALLOWED_EXTENSIONS=png,jpg,jpeg,gif,webp

# API Configuration (OpenAI)
OPENAI_API_KEY=your_llm_api_key_here
OPENAI_MODEL=gpt-4o-mini
OPENAI_MAX_TOKENS=2000

# Email Configuration (optional)
# For port 465 (SSL): Set MAIL_USE_SSL=True and MAIL_USE_TLS=False
# For port 587 (TLS): Set MAIL_USE_SSL=False and MAIL_USE_TLS=True
# Examples: Hostinger uses 465 (SSL), Gmail uses 587 (TLS)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_email_password
MAIL_DEFAULT_SENDER=noreply@opinian.com
ADMIN_EMAIL=admin@opinian.com
APP_URL=http://localhost:5000

# Security Configuration
BCRYPT_LOG_ROUNDS=12

# Session Configuration
SESSION_TYPE=filesystem
SESSION_FILE_DIR=flask_session
SESSION_PERMANENT=False
PERMANENT_SESSION_LIFETIME=3600

SUPERADMIN_USERNAME=user
SUPERADMIN_EMAIL=user@example.com
SUPERADMIN_PASSWORD=pass
SUPERADMIN_FIRST_NAME=fname
SUPERADMIN_LAST_NAME=lname

# ============================================================
# SuperAdmin Initial Setup (OPTIONAL - For Automated Deployment)
# ============================================================
# SECURITY WARNING: These credentials are used ONLY for automated
# SuperAdmin creation during init_db.py
#
# For LOCAL DEVELOPMENT: Leave these commented out!
#   - When you run init_db.py, it will prompt you interactively
#   - You choose your own credentials and must remember them
#
# For SERVER/CI-CD: Uncomment and set secure values
#   - Use strong, unique passwords
#   - Never commit the actual .env file to git
#   - Use secrets management in production (AWS Secrets, Azure Key Vault, etc.)
# ============================================================

SUPERADMIN_USERNAME=admin
SUPERADMIN_EMAIL=admin@example.com
SUPERADMIN_PASSWORD=your_password_here
SUPERADMIN_FIRST_NAME=Super
SUPERADMIN_LAST_NAME=Admin